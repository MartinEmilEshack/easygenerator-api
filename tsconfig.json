{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@easygen/exceptions": [
        "libs/exceptions/src"
      ],
      "@easygen/exceptions/*": [
        "libs/exceptions/src/*"
      ],
      "@easygen/guards": [
        "libs/guards/src"
      ],
      "@easygen/guards/*": [
        "libs/guards/src/*"
      ],
      "@easygen/logging": [
        "libs/logging/src"
      ],
      "@easygen/logging/*": [
        "libs/logging/src/*"
      ],
      "@easygen/proto": [
        "libs/proto"
      ],
      "@easygen/proto/*": [
        "libs/proto/schemas/*"
      ],
      "@easygen/sys-configs": [
        "libs/sys-configs/src"
      ],
      "@easygen/sys-configs/*": [
        "libs/sys-configs/src/*"
      ]
    }
  }
}